<mvc:View controllerName="application.register" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
   <Page title="Sign up to Short Shop" showNavButton="true" navButtonPress="onBackPress">
   		<content>
   			<Input type="Text" placeholder="first name" value="{registerUser>/firstName}"/>
            <Input type="Text" placeholder="last name" value="{registerUser>/lastName}"/>
            <Input type="Email" placeholder="email" value="{registerUser>/email}"/>
            <Input type="Email" placeholder="email" value="{registerUser>/emailAgain}"/>
            <Input type="Password" placeholder="password" value="{registerUser>/password}"/>
            <Input type="Password" placeholder="password" value="{registerUser>/passwordAgain}"/>
            <Button text="Register" press="onRegisterPress" icon="" class="addView_Buttons" iconFirst="false"/>
   		</content>
   </Page>
</mvc:View>