<mvc:View controllerName="application.home" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
   <Page showHeader="false">
   		<content>
   			<Bar design="Header" class="sapMPageHeader">
   				<contentLeft>
   					<Button icon="sap-icon://add" press="onAddPress" text="Add an item"/>
   				</contentLeft>
   				<contentMiddle>
   					<Label text="{path:'listHeader>/itemCount', formatter:'Formatter.homeViewTitle'}"/>
   				</contentMiddle>
   				<contentRight>
   					<Button icon="sap-icon://person-placeholder" press="onUserIconPress"/>
   				</contentRight>
   			</Bar>

            <List id="listItems" items="{path: 'listItems>/data'}" delete="handleDeleteGesture" mode="{path:'device>/data', formatter:'Formatter.listMode'}" noDataText="Add an item to your list to get going">
               <ObjectListItem type="Active" title="{listItems>itemName}" press="onListItemPress"/>
               <swipeContent>
                  <Button text="Delete Item" type="Reject" press="handleDeleteGesture"/>
               </swipeContent>
            </List>
   		</content>
   </Page>
</mvc:View>