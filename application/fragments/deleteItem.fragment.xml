<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Delete?" type="Message">
      <Text text="Are you sure you want to delete the item?"/>
      <beginButton>
        <Button text="Yes" app:dialogType="Std" press="onDialogCloseButton"/>
      </beginButton>
      <endButton>
        <Button text="No" app:dialogType="Std" press="onDialogCloseButton"/>
      </endButton>
    </Dialog>
</core:FragmentDefinition>