<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Delete?" type="Message">
      <Text text="Are you sure you want to delete {deleteItem>/itemName}?"/>
      <beginButton>
        <Button text="Yes" press="onDeleteConfirmPress"/>
      </beginButton>
      <endButton>
        <Button text="No" press="onDeleteCancelPress"/>
      </endButton>
    </Dialog>
</core:FragmentDefinition>