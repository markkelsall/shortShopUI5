<mvc:View controllerName="application.user" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
   <Page title="{user>/firstName} {user>/lastName}" showNavButton="true" navButtonPress="onBackPress">
   		<content>
   			<Input type="Text" placeholder="first name" value="{userCopy>/firstName}"/>
            <Input type="Text" placeholder="last name" value="{userCopy>/lastName}"/>
            <Input type="Email" placeholder="email" value="{userCopy>/email}"/>
            <Input type="Email" placeholder="email" value="{userCopy>/emailAgain}"/>
            <Button text="Update" press="onUpdateUser" icon="sap-icon://action" iconFirst="false" class="loginView_Buttons"/>
   		</content>
   </Page>
</mvc:View>