<mvc:View controllerName="application.add" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
   <Page title="Add an item" showNavButton="true" navButtonPress="onBackPress">
   		<content>
            <Input type="Text" placeholder="item name"/>
            <Input type="Text" placeholder="quantity"/>
            <TextArea placeholder="additional comments" class="addView_TextArea"/>
            <Button text="Add item" press="onAddPress" icon="sap-icon://add" class="addView_Buttons" iconFirst="false"/>
   		</content>
   </Page>
</mvc:View>