<mvc:View controllerName="application.add" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
   <Page title="Add an item" showNavButton="true" navButtonPress="onBackPress">
   		<content>
            <Input type="Text" placeholder="item name" value="{item>/name}"/>
            <Input type="Text" placeholder="quantity" value="{item>/quantity}"/>
            <TextArea placeholder="additional comments" class="addView_TextArea" value="{item>/additionalComments}"/>
            <Button text="Add item" press="onAddItemPress" icon="sap-icon://add" class="addView_Buttons" iconFirst="false"/>
            <Label text="{itemMessage>/friendlyMessage}" visible="{itemMessage>/result}"/>
   		</content>
   </Page>
</mvc:View>