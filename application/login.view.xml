<mvc:View controllerName="application.login" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
   <Page title="Short Shop Login" enableScrolling="false">
   		<content>
   			<Input type="Text" placeholder="Email"/>
   			<Input type="Password" placeholder="Password"/>
   			<VBox>
   				<Button text="Login" press="onLoginPress" icon="sap-icon://play" iconFirst="false" class="loginButton"/>
   				<Button text="Sign up" press="onRegisterPress" icon="sap-icon://account" iconFirst="false" class="loginButton"/>
   				<Link text="Forgot your password?" press="onForgotPasswordPress" class="forgotPassword"/>
   			</VBox>
   		</content>
   </Page>
</mvc:View>